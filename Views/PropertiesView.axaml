<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BugFablesDataEditor.ViewModels"
             xmlns:bf="using:BugFablesDataEditor.BugFablesEnums"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BugFablesDataEditor.Views.PropertiesView">
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="Speed"/>
      <NumericUpDown Value="{Binding CurrentEntity.Speed}"/>
      <Label VerticalContentAlignment="Center" Content="Speed multiplier"/>
      <NumericUpDown Value="{Binding CurrentEntity.SpeedMultiplier}"/>
      <Label VerticalContentAlignment="Center" Content="Timer"/>
      <NumericUpDown Value="{Binding CurrentEntity.Timer}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="Radius"/>
      <NumericUpDown Value="{Binding CurrentEntity.Radius}"/>
      <Label VerticalContentAlignment="Center" Content="Wander radius"/>
      <NumericUpDown Value="{Binding CurrentEntity.WanderRadius}"/>
      <Label VerticalContentAlignment="Center" Content="Teleport radius"/>
      <NumericUpDown Value="{Binding CurrentEntity.TeleportRadius}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="Freeze time"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeTime}"/>
    </StackPanel>
    <Label Content="Freeze size"/>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="X"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeSize.x}"/>
      <Label VerticalContentAlignment="Center" Content="Y"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeSize.y}"/>
      <Label VerticalContentAlignment="Center" Content="Z"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeSize.z}"/>
    </StackPanel>
    <Label Content="Freeze offset"/>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="X"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeOffset.x}"/>
      <Label VerticalContentAlignment="Center" Content="Y"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeOffset.y}"/>
      <Label VerticalContentAlignment="Center" Content="Z"/>
      <NumericUpDown Value="{Binding CurrentEntity.FreezeOffset.z}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="Bob range"/>
      <NumericUpDown Value="{Binding CurrentEntity.BobRange}"/>
      <Label VerticalContentAlignment="Center" Content="Bob speed"/>
      <NumericUpDown Value="{Binding CurrentEntity.BobSpeed}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label VerticalContentAlignment="Center" Content="Initial height"/>
      <NumericUpDown Value="{Binding CurrentEntity.InitialHeight}"/>
      <Label VerticalContentAlignment="Center" Content="Return to height"/>
      <CheckBox Margin="5,0,0,0" VerticalContentAlignment="Center" IsChecked="{Binding CurrentEntity.ReturnToHeight}"/>
    </StackPanel>
  </StackPanel>
</UserControl>
